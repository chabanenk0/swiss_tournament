{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block sidebar %}{% endblock %}

{% block content %}

    <div class="content-wrapper container d_flex">

        {% block main %}

            {{ form_start(form, {'action': path('login_check'), 'attr':{'novalidate': 'novalidate','class':'d_flex m_auto flex_column form-horizontal login-form-block row col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2'} }) }}

            <h2 class="login_form_row m_1">Login</h2>
            {% if error %}
                <div class="login_form_row alert alert-danger m_1">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="row login_form_row m_1">
                {{ form_label(form._username,'', {'attr': {'class': 'control-label col-md-2'}}) }}
                {{ form_widget(form._username, {'attr': {'class': 'form-control col-md-10'}}) }}
            </div>

            <div class="row login_form_row m_1">
                {{ form_label(form._password,'', {'attr': {'class': 'control-label col-md-2'}}) }}
                {{ form_widget(form._password, {'attr': {'class': 'form-control col-md-10'}}) }}
            </div>
            <div class="row login_form_row m_1">
                <button type="submit" class="btn btn-lg btn-block btn-primary"> Login
                </button>
            </div>
            {{ form_end(form) }}

        {% endblock %}

    </div>

{% endblock %}

