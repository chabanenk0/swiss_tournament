{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block content %}
    <link rel="stylesheet" href="{{ asset('build/tournament.css') }}">


    <div class="row list_of_participant">
        <div class="col-md-2"></div>
        <div class="col-md-10">
            <table>
                <tr>
                    <td>{{ 'Place'|trans }}</td>
                    <td>{{ 'Full name'|trans }}</td>
                    <td>{{ 'Birth date'|trans }}</td>
                    <td>{{ 'City'|trans }}</td>
                    <td>{{ 'Federation'|trans }}</td>
                    <td>{{ 'Rating'|trans }}</td>
                    <td>{{ 'Rank'|trans }}</td>
                    <td>1</td>
                    <td>2</td>
                    <td>3</td>
                    <td>4</td>
                    <td>5</td>
                </tr>
            {% for participant in participants %}
                <tr>
                    <td>
                        {{ participant.participantOrder }}
                    </td>
                    <td>
                        {{ participant.player.firstName }}
                        {{ participant.player.lastName }}
                    </td>
                    <td>
                        {{ participant.player.birthDate|date }}
                    </td>
                    <td>
                        {{ participant.player.city }}
                    </td>
                    <td>
                        {{ participant.player.federation }}
                    </td>
                    <td>
                        1237
                    </td>
                    <td>
                        11
                    </td>
                    <td class="res">
                        <input type="text" class="forma">
                        <select class="forma">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                        <input class="forma" type="submit">
                    </td>
                    <td>
                        /
                    </td>
                    <td>
                        /
                    </td>
                    <td>
                        /
                    </td>
                    <td>
                        /
                    </td>
                </tr>
            {% endfor %}
            </table>
        </div>
    </div>

    <script>
        $('.res').on('click', function () {
            $('.forma').css({'display' : 'block'});
        });
    </script>
    <style>
        .forma{
            display: none;
        }
    </style>

{% endblock content %}

