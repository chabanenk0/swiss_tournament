{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block content %}
    <div class="row list_of_participant">
        <div class="col-md-6">
            <h2>Список учасників турніру:</h2>
            {% set i = 0 %}
            {% for participant in participants %}
                {% set i = i + 1 %}
                <h4>{{ i }}.{{ participant.player }}</h4>
            {% endfor %}
        </div>
        <div class="col-md-6">
            <h2>Список гравців:</h2>
            {{ form_start(form) }}
            {% set i = 0 %}
            {% for player in players %}
                {% set i = i + 1 %}
                    <h4>
                        {{ i }}.{{ player.lastName }} {{ player.firstName }}
                        <input type="checkbox" name="player_id" value="{{ player.id }}"/>
                    </h4>
            {% endfor %}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock content %}


