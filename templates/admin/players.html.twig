{% extends '@EasyAdmin/default/layout.html.twig' %}
{% block content %}
    <div class="row list_of_participant">
        <div class="col-md-6">
            <h2>Список учасників турніру:</h2>
            <ol>
                {% set i = 0 %}
                {% for participant in participants %}
                    {% set i = i + 1 %}
                    <li>{{ participant.player }}</li>
                {% endfor %}
            </ol>
        </div>
        <div class="col-md-6">
            <h2>Список гравців:</h2>

            {{ form_start(form) }}

            {{ form_end(form) }}

        </div>
    </div>
    <script>
        $(document).ready(function() {
            $('.new-participant-dropdown').select2();
        });
    </script>
{% endblock content %}

